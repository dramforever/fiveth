"UART0_BASE" [ 268435456 ] define ; 0x10000000

"uart_lsr" [ UART0_BASE 20 + w@ ] define

"uart_putchar" [
    [ uart_lsr 32 & =0 ] repeat
    255 & UART0_BASE w!
] define

"b." [
    ; Add CR before LF
    dup 10 = [ 13 uart_putchar ] if
    uart_putchar
] define

"getchar" [
    [ uart_lsr 1 & =0 ] repeat
    UART0_BASE w@
] define
